<UserControl x:Class="AIPromptOptimizerExtension.Windows.PromptEvalWindow.PromptEngineerWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="PromptyWindow">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="10" HorizontalAlignment="Center" Foreground="White">Prompty</TextBlock>
                <TextBox x:Name="PromptInputText" Width="200" Height="auto" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                <Button Width="60" Height="20" Margin="5" Click="OnSubmitPrompt">Submit</Button>

                <TextBlock x:Name="PromptText" TextWrapping="Wrap" Foreground="White" />
                <Rectangle Margin="8" Height="1" HorizontalAlignment="Stretch" Fill="Gray"></Rectangle>
                <TextBlock x:Name="ClarityText" TextWrapping="Wrap" Foreground="White" />
                <Rectangle Margin="8" Height="1" HorizontalAlignment="Stretch" Fill="Gray"></Rectangle>
                <TextBlock x:Name="ConcicenessText" TextWrapping="Wrap" Foreground="White" />
                <Rectangle Margin="8" Height="1" HorizontalAlignment="Stretch" Fill="Gray"></Rectangle>
                <TextBlock x:Name="ContextualityText" TextWrapping="Wrap" Foreground="White" />
                <Rectangle Margin="8" Height="1" HorizontalAlignment="Stretch" Fill="Gray"></Rectangle>
                <TextBlock x:Name="PraiseText" TextWrapping="Wrap" Foreground="White" />
                <Rectangle Margin="8" Height="1" HorizontalAlignment="Stretch" Fill="Gray"></Rectangle>
                <TextBlock x:Name="BenefitsText" TextWrapping="Wrap" Foreground="White" />
                <Path Stroke="White" StrokeThickness="4">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="10,10">
                                <ArcSegment Size="20, 20" IsLargeArc="True" Point="10.1, 10"></ArcSegment>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
